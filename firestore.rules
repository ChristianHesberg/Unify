rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read: if request.auth !=null
      allow write: if false;
    }
    match /users/{userId} {
      allow read: if request.auth != null;
    }
    match /chats/{chatId} {
      allow read: if request.auth.uid in resource.data.userIds;
    }
  }
}
